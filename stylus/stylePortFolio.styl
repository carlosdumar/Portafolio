@import "normalize.styl/normalize.styl"

@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot')
  src url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
      url('../fonts/icomoon.woff') format('woff'),
    url('../fonts/icomoon.ttf') format('truetype'),
     url('../fonts/icomoon.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
	font-size 16px
	font-family 'Oswald', sans-serif
header
	background black
	width 100%
	position fixed
	z-index 2
	nav
		background #696969
		border-top .5em solid #FF8C00
		width 100%
	span
		font-weight bold
		letter-spacing 1px		
	.nombre
		margin-top 1em
		color white
		font-size 2.1em
		
	.profesion
		margin-top 0.5em
		margin-bottom 1em
		font-size 1.3em
		color #FF4500
ul
	list-style none
a
	text-decoration none
footer
	background black
	margin-top 2em
	padding-top 1em
	position absolute
	width 100%	
	span
		text-transform uppercase
		color #FF4500
	p
		color white
	.acerca
		font-size 1.3em
		width 50%
		text-align center
		p
			font-size 1em
	.contacto
		font-size 1.3em
	.followme
		span
			font-size 1.3em
	.redessociales
		font-size 1.5em
		a
			margin-right 1em

.image-background	
	margin 0
	img
		-webkit-filter blur(5px)		  
		
.image-perfil
	position absolute
	margin-left 40%
	top 15em
	img
		-webkit-border-radius 100px
		-moz-border-radius 100px
		border-radius 100px
		border solid 7px white
		
.logo
	position absolute
	left 2em
	margin 0
	top 1em
	img
		border-radius 50px
		border solid 4px white
.menu
	list-style none
	font-size 1.2em
	li
		border-right 1px solid white
		padding-right 40px		
		a
			color white
.perfil
	margin-top 14em
	.datosbasicos
		color white
		font-size 2em
		font-weight bold
		margin-left 8.333%
		position absolute
		text-align center
		top 17em
.portafolio
	.cargo
		color #696969
	.title-portafolio
		font-size 1.2em

.icon-google-plus3:before
	content "\e900"

.icon-facebook3:before
	content "\e901"

.icon-instagram:before 
	content "\e902"
	
.icon-twitter3:before 
	content "\e903"

.icon-mail4:before
	content "\e904"

.icon-skype:before
	content "\e905"
	
.icon-whatsapp:before
	content "\e906"

.color
	color #ccc
	
.row
	display -webkit-flex
	display -ms-flexbox
	display -webkit-box
	display flex
	
	-webkit-flex-direction row
	-ms-flex-direction row
	-webkit-box-orient horizontal
	-webkit-box-direction normal
	flex-direction row
	
	-webkit-justify-content: space-around;
	-ms-flex-pack: distribute;
	justify-content: space-around;
	
.column
	display -webkit-flex
	display -ms-flexbox
	display -webkit-box
	display flex
	
	-webkit-flex-direction column
	-ms-flex-direction column
	-webkit-box-orient vertical
	-webkit-box-direction normal
	flex-direction column
	
	-webkit-align-items center
	-ms-flex-align center
	-webkit-box-align center
	align-items center